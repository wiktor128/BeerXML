@model List<BeerXML.Models.Recipe>


<container>
    <div class="row">
        <div class="col s12">
            <h4>Recipes</h4>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col s12 m6 l3 view-card">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">@item.Name</span>
                        <table class="view-table">
                            <tbody>
                                <tr>
                                    <td> Type: </td>
                                    <td> @item.Type </td>
                                </tr>
                                <tr>
                                    <td> Brewer:  </td>
                                    <td> @item.Brewer </td>
                                </tr>
                                <tr>
                                    <td> Date: </td>
                                    <td> @item.Date </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-action">
                        <a class="waves-effect waves-light btn-flat" href="/Display/Recipe?id=@item.RecipeId">Details</a>
                    </div>
                </div>
            </div>
        }
        
    </div>
</container>