@model BeerXML.Models.MashMashStepViewModel

@{
    ViewData["Title"] = "Add Water Item";
}

<form class="" id="mash_form" method="post" asp-action="Mash" asp-controller="NewItem">
    @Html.EditorFor(m => m.Mash)

    <div id="mash_step_container" class="row">


        <div id="mash_step_add_new" class="col s12 m4 l2 view-card">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text center-align">
                    <span class="card-title"><i class="medium material-icons">playlist_add</i></span>
                </div>
                <div class="card-action center-align">
                    <a id="mash_step_add_new_btn" class="waves-effect waves-light btn-flat" >New Mash Step</a>
                </div>
            </div>
        </div>
    </div>

    @*<div class="row right-align">
        <a id="btn_ajax" class="waves-effect waves-light btn modal-trigger" href="#mash_step_modal_0">
            New Mash Step
        </a>
    </div>*@
    <div class="row right-align">
        <button class="waves-effect waves-light btn" type="submit">
            <i class="material-icons left">send</i>
            Submit
        </button>
    </div>
    @*<div id="mash_step_modal_0" class="modal modal-fixed-footer">
        <div id="ajax_response_container" class="modal-content">
            <h4>Modal Header</h4>
            <p>A bunch of text</p>
        </div>
        <div class="modal-footer">
            <a id="mash_step_modal_add_button" order-number="0" href="#!" class=" waves-effect waves-green btn-flat mash-step-modal-btn-add">Add</a>
        </div>
    </div>*@
</form>

<script>
    var orderNumber = 0;

    var mashStepViewParams = {
        orderNumber:    orderNumber,
        name:           'super Mash',
        version:        1,
        type:           'eblebeble',
        infuseAmount:   2,
        stepTemp:       13,
        stepTime:       22,
        rampTime:       31,
        endTemp:        22
    }
    

</script>
<script id="mash_step_view_template" type="x-tmpl-mustache">
    <div id="mash_step_view_{{ orderNumber }}" class="col s12 m6 l3 view-card">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{ name }}</span>
                <table class="view-table">
                    <tbody>
                        <tr>
                            <td> Version: </td>
                            <td> {{ version }} </td>
                        </tr>
                        <tr>
                            <td> Type: </td>
                            <td> {{ type }} </td>
                        </tr>
                        <tr>
                            <td> Infuse&nbsp;Amount: </td>
                            <td> {{ infuseAmount }} </td>
                        </tr>
                        <tr>
                            <td> Step Temp: </td>
                            <td> {{ stepTemp }} </td>
                        </tr>
                        <tr>
                            <td> Step Time: </td>
                            <td> {{ stepTime }} </td>
                        </tr>
                        <tr>
                            <td> Ramp Time: </td>
                            <td> {{ rampTime }} </td>
                        </tr>
                        <tr>
                            <td> End Temp: </td>
                            <td> {{ endTemp }} </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-action">
                <a class="waves-effect waves-light btn-flat modal-trigger" href="{{ modalReference }}">Edit</a>
                <a class="waves-effect waves-light btn-flat modal-deleter" href="{{ modalReference }}">Delete</a>
            </div>
        </div>
    </div>
</script>
<script id="mash_step_modal_template" type="x-tmpl-mustache">
    <div id="mash_step_modal_{{ orderNumber }}" class="modal modal-fixed-footer">
        <div class="modal-content">
            @*{{ //editorForMashStep }}*@
        </div>
        <div class="modal-footer">
            <a order-number="{{ orderNumber }}" class="waves-effect waves-green btn-flat mash-step-modal-btn-save">Save</a>
        </div>
    </div>
</script>