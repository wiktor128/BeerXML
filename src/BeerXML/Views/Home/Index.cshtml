@{
    ViewData["Title"] = "Home Page";
}

<h3 class="ui header">New Recipe</h3>
<div class="ui styled accordion">
    <div class="title active">
        <i class="dropdown icon"></i>
        Main
    </div>
    <div class="content active">
        <div class="ui form">

            <div class="required field">
                <label>Name</label>
                <input type="text" placeholder="Name" data-content="Name of the recipe." data-position="top right">
            </div>

            <div class="required field">
                <label>Version</label>
                <input type="number" min="1" placeholder="Version">
            </div>

            <div class="required field">
                <label>Type</label>
                <select class="ui search dropdown" id="new_recipe_type" enables-conditional="true">
                    <option value="">Select Type</option>
                    <option value="Extract">Extract</option>
                    <option value="Partial Mash">Partial Mash</option>
                    <option value="All Grain">All Grain</option>
                </select>
            </div>

            <div class="required field">
                <label>Brewer</label>
                <input type="text" placeholder="Brewer">
            </div>

            <div class="field">
                <label>Assistant Brewer</label>
                <input type="text" placeholder="Assistant Brewer">
            </div>

            <div class="required field">
                <label>Batch Size</label>
                <input type="number" min="0.1" step="0.1" placeholder="Batch Size">
            </div>

            <div class="required field">
                <label>Boil Size</label>
                <input type="number" min="0.1" step="0.1" placeholder="Boil Size">
            </div>

            <div class="required field">
                <label>Boil Time</label>
                <input type="number" min="0" placeholder="Boil Time">
            </div>

            <div class="required disabled field" depend-on="new_recipe_type" depend-type="blacklist" depend-val="Extract">
                <label>Efficiency</label>
                <input type="number" min="0" step="0.1" placeholder="Efficiency">
            </div>

            <div class="field">
                <label>Notes</label>
                <textarea rows="2" placeholder="Notes"></textarea>
            </div>

            <div class="field">
                <label>Taste Notes</label>
                <textarea rows="2" placeholder="Taste Notes"></textarea>
            </div>

            <div class="field">
                <label>Taste Rating</label>
                <input type="number" min="0" max="50" step="0.1" placeholder="Taste Rating">
            </div>

        </div>
    </div>
</div>

